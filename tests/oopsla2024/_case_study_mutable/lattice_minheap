ident minheap;

annotation UnknownHeapProperty() any :<==> "true" for "true";
annotation BottomHeapProperty() any :<==> "false" for "true";

annotation HeapProperty() case_study.MinHeapNode
    :<==> "§subject§ == null || ( (§subject§.left == null || §subject§.left.datum > §subject§.datum) && (§subject§.right == null || §subject§.right.datum > §subject§.datum)) && §subject§.size == 1 + (§subject§.left == null ? 0 : §subject§.left.size) + (§subject§.right == null ? 0 : §subject§.right.size)"
    for "true";

relation HeapProperty() <: UnknownHeapProperty() :<==> "true";
relation BottomHeapProperty() <: HeapProperty() :<==> "true";
relation BottomHeapProperty() <: UnknownHeapProperty() :<==> "true";
